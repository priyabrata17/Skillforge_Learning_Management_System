<% layout("layouts/boilerplateAdminPanel") %>

<body>
  <!-- Begin Page Content -->
  <div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">All Subjects</h1>
    <p class="mb-4">
      Manage all subjects (video lessons) linked with courses. You can add, update or remove subjects here.
    </p>

    <!-- Card -->
    <div class="card shadow mb-4">

      <!-- Header -->
      <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Subjects List</h6>

        <!-- Add New Subject Button -->
        <a href="/admin/create-subject-page" class="btn btn-sm btn-info">
          <i class="fas fa-plus"></i> Add New Subject
        </a>
      </div>

      <!-- Body -->
      <div class="card-body">
        <div class="table-responsive">

          <table class="table table-bordered table-hover align-middle" width="100%" cellspacing="0">
            <thead class="thead-light">
              <tr>
                <th>SN</th>
                <th>Course Image</th>
                <th>Course Title</th>
                <th>Subject Title</th>
                <th>Subject Description</th>
                <th>Subject Order</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% if (subjects && subjects.length > 0) { %>
                <% subjects.forEach((subject, index) => { %>

                  <tr>
                    <td><%= index + 1 %></td>

                    <!-- Course Image -->
                    <td class="text-center">
                      <img 
                        src="<%= subject.courseImage?.url || '/img/default-course.png' %>" 
                        alt="<%= subject.courseTitle %>"
                        style="width: 60px; height: 60px; border-radius: 6px; object-fit: cover;">
                    </td>

                    <!-- Course Title -->
                    <td><%= subject.courseTitle %></td>

                    <!-- Subject Title -->
                    <td><%= subject.title %></td>

                    <!-- Description -->
                    <td><%= subject.description %></td>

                    <!-- Order -->
                    <td><%= subject.order %></td>

                    <!-- Actions -->
                    <td class="text-center">

                      <a href="/admin/update-subject-page/<%= subject._id %>" 
                         class="btn btn-sm btn-primary mr-1 mb-2">
                        <i class="fas fa-edit"></i> Edit
                      </a>

                      <button class="btn btn-sm btn-danger" 
                              data-toggle="modal"
                              data-target="#deleteSubjectModal_<%= subject._id %>">
                        <i class="fas fa-trash-alt"></i> Delete
                      </button>

                    </td>
                  </tr>

                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="7" class="text-center text-muted">No subjects found.</td>
                </tr>
              <% } %>
            </tbody>

          </table>

        </div>
      </div>
    </div>

    <!-- ============================
     DELETE CONFIRMATION MODALS
    ============================ -->
    <% if (subjects && subjects.length > 0) { %>
      <% subjects.forEach((subject) => { %>

        <div class="modal fade" id="deleteSubjectModal_<%= subject._id %>" tabindex="-1" role="dialog">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">

              <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Delete Subject</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                  <span>&times;</span>
                </button>
              </div>

              <div class="modal-body">
                Are you sure you want to delete <strong><%= subject.title %></strong>? <br>
                This action cannot be undone.
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

                <form action="/admin/delete/subject/<%= subject._id %>?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
              </div>

            </div>
          </div>
        </div>

      <% }) %>
    <% } %>

  </div>
</body>
