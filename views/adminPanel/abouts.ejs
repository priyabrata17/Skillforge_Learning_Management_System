<% layout("layouts/boilerplateAdminPanel") %>

  <body>
    <!-- Begin Page Content -->
    <div class="container-fluid">

      <!-- Page Heading -->
      <h1 class="h3 mb-2 text-gray-800">All Abouts</h1>
      <p class="mb-4">
        Manage all about sections displayed on the website. You can add, update or delete entries.
      </p>

      <!-- Card -->
      <div class="card shadow mb-4">

        <!-- Header -->
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
          <h6 class="m-0 font-weight-bold text-primary">Abouts List</h6>

          <!-- Add New -->
          <a href="/admin/create-about-page" class="btn btn-sm btn-info">
            <i class="fas fa-plus"></i> Add New About
          </a>
        </div>

        <!-- Body -->
        <div class="card-body">
          <div class="table-responsive">

            <table class="table table-bordered table-hover align-middle" width="100%" cellspacing="0">
              <thead class="thead-light">
                <tr>
                  <th>SN</th>
                  <th>Image</th>
                  <th>Title</th>
                  <th>Description</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>

              <tbody>
                <% if (abouts && abouts.length> 0) { %>
                  <% abouts.forEach((about, index)=> { %>

                    <tr>
                      <td>
                        <%= index + 1 %>
                      </td>

                      <!-- Image -->
                      <td class="text-center">
                        <img src="<%= about.image?.url || '/img/default.png' %>" alt="<%= about.title %>"
                          style="width: 60px; height: 60px; border-radius: 6px; object-fit: cover;">
                      </td>

                      <!-- Title -->
                      <td>
                        <%= about.title %>
                      </td>

                      <!-- Description -->
                      <td>
                        <%= about.description %>
                      </td>

                      <!-- Action Buttons -->
                      <td class="text-center">
                        <a href="/admin/update-about-page/<%= about._id %>"
                          class="btn btn-sm btn-primary d-inline-flex align-items-center mr-1 mb-2">
                          <i class="fas fa-edit"></i> Edit
                        </a>

                        <button class="btn btn-sm btn-danger d-inline-flex align-items-center mb-2" data-toggle="modal"
                          data-target="#deleteAboutModal_<%= about._id %>">
                          <i class="fas fa-trash-alt"></i> Delete
                        </button>
                      </td>



                      <% }) %>
                        <% } else { %>
                    <tr>
                      <td colspan="5" class="text-center text-muted">No about data found.</td>
                    </tr>
                    <% } %>
              </tbody>

            </table>

          </div>
        </div>
      </div>

      <!-- ============================
        DELETE CONFIRMATION MODALS
        ============================ -->
      <% if (abouts && abouts.length> 0) { %>
        <% abouts.forEach((about)=> { %>

          <div class="modal fade" id="deleteAboutModal_<%= about._id %>" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">

                <div class="modal-header bg-danger text-white">
                  <h5 class="modal-title">Delete About</h5>
                  <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                  </button>
                </div>

                <div class="modal-body">
                  Are you sure you want to delete <strong>
                    <%= about.title %>
                  </strong>? <br>
                  This action cannot be undone.
                </div>

                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

                  <form action="/admin/delete/about/<%= about._id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                  </form>
                </div>

              </div>
            </div>
          </div>

          <% }) %>
            <% } %>

    </div>
  </body>