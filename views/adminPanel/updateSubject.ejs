<% layout("layouts/boilerplateAdminPanel") %>

    <body>
        <div class="container-fluid">

            <h1 class="h3 mb-4 text-gray-800">Update Subject</h1>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Edit Subject</h6>
                </div>

                <div class="card-body">

                    <form action="/admin/update/subject/<%= existingSubject._id %>?_method=PATCH" method="POST">

                        <div class="row">

                            <!-- Course Dropdown -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Select Course</label>
                                <select name="courseId" class="form-control" required>
                                    <option value="">Select Course</option>

                                    <% if (allCourses && allCourses.length> 0) { %>
                                        <% allCourses.forEach(course=> { %>
                                            <option value="<%= course._id %>"
                                                <%=course._id.toString()===existingSubject.courseId.toString()
                                                ? "selected" : "" %>>
                                                <%= course.title %>
                                            </option>
                                            <% }) %>
                                                <% } else { %>
                                                    <option disabled>No courses available</option>
                                                    <% } %>

                                </select>
                            </div>

                            <!-- Subject Title -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Subject Title</label>
                                <input type="text" name="title" class="form-control"
                                    value="<%= existingSubject.title %>" required>
                            </div>

                        </div>

                        <div class="row">

                            <!-- Description -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Description</label>
                                <input type="text" name="description" class="form-control"
                                    value="<%= existingSubject.description %>" required>
                            </div>

                            <!-- Order -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Order</label>
                                <input type="number" name="order" class="form-control"
                                    value="<%= existingSubject.order %>" required>
                            </div>

                        </div>

                        <div class="row">

                            <!-- Video URL -->
                            <div class="col-md-12 mb-3">
                                <label class="form-label fw-bold">YouTube Video URL</label>
                                <input type="url" name="videoUrl" class="form-control"
                                    value="<%= existingSubject.videoUrl %>" required>
                            </div>

                        </div>

                        <!-- Buttons -->
                        <div class="mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-edit"></i> Update Subject
                            </button>

                            <a href="/admin/all-subject" class="btn btn-secondary ml-2">
                                Cancel
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </body>