<% layout("layouts/boilerplateAdminPanel") %>

  <body>
    <!-- Begin Page Content -->
    <div class="container-fluid">

      <!-- Page Heading -->
      <h1 class="h3 mb-2 text-gray-800">All Courses</h1>
      <p class="mb-4">
        Manage all courses offered in the LMS. You can add, update or remove courses here.
      </p>

      <!-- Card -->
      <div class="card shadow mb-4">

        <!-- Header -->
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
          <h6 class="m-0 font-weight-bold text-primary">Courses List</h6>

          <!-- Add New Course Button -->
          <a href="/admin/create-course-page" class="btn btn-sm btn-info">
            <i class="fas fa-plus"></i> Add New Course
          </a>
        </div>

        <!-- Body -->
        <div class="card-body">
          <div class="table-responsive">

            <table class="table table-bordered table-hover align-middle" width="100%" cellspacing="0">
              <thead class="thead-light">
                <tr>
                  <th>SN</th>
                  <th>Course Image</th>
                  <th>Course Title</th>
                  <th>Instructor Image</th>
                  <th>Instructor Name</th>
                  <th>Course Description</th>
                  <th>Skill Level</th>
                  <th>Certificate</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>

              <tbody>
                <% if (courses && courses.length> 0) { %>
                  <% courses.forEach((course, index)=> { %>

                    <tr>
                      <td>
                        <%= index + 1 %>
                      </td>

                      <!-- Course Image -->
                      <td class="text-center">
                        <img src="<%= course.image?.url || '/img/default-course.png' %>" alt="<%= course.title %>"
                          style="width: 60px; height: 60px; border-radius: 6px; object-fit: cover;">
                      </td>

                      <!-- Title -->
                      <td>
                        <%= course.title %>
                      </td>

                      <!-- Instructor Image -->
                      <td class="text-center">
                        <img src="<%= course.instructorImage.url || '/img/default-course.png' %>"
                          alt="<%= course.instructorName %>"
                          style="width: 60px; height: 60px; border-radius: 6px; object-fit: cover;">
                      </td>

                      <!-- Instructor Name -->
                      <td>
                        <%= course.instructorName %>
                      </td>

                      <!-- Description -->
                      <td>
                        <%= course.description %>
                      </td>

                      <!-- Skill Level -->
                      <td>
                        <span class="badge badge-info">
                          <%= course.skillLevel %>
                        </span>
                      </td>

                      <!-- Certificate -->
                      <td>
                        <%= course.certificate %>
                      </td>

                      <!-- Actions -->
                      <td class="text-center">

                        <a href="/admin/update-course-page/<%= course._id %>" class="btn btn-sm btn-primary mr-1 mb-2">
                          <i class="fas fa-edit"></i> Edit
                        </a>

                        <button class="btn btn-sm btn-danger" data-toggle="modal"
                          data-target="#deleteCourseModal_<%= course._id %>">
                          <i class="fas fa-trash-alt"></i> Delete
                        </button>

                      </td>
                    </tr>

                    <% }) %>
                      <% } else { %>
                        <tr>
                          <td colspan="9" class="text-center text-muted">No courses found.</td>
                        </tr>
                        <% } %>
              </tbody>

            </table>

          </div>
        </div>
      </div>

      <!-- ============================
       DELETE CONFIRMATION MODALS
      ============================ -->
      <% if (courses && courses.length> 0) { %>
        <% courses.forEach((course)=> { %>

          <div class="modal fade" id="deleteCourseModal_<%= course._id %>" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">

                <div class="modal-header bg-danger text-white">
                  <h5 class="modal-title">Delete Course</h5>
                  <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                  </button>
                </div>

                <div class="modal-body">
                  Are you sure you want to delete <strong>
                    <%= course.title %>
                  </strong>? <br>
                  This action cannot be undone.
                </div>

                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

                  <form action="/admin/delete/course/<%= course._id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                  </form>
                </div>

              </div>
            </div>
          </div>

          <% }) %>
            <% } %>

            <!-- Pagination -->
              <nav aria-label="Pagination">
                <ul class="pagination justify-content-center">

                  <% if (hasPrevPage) { %>
                    <li class="page-item">
                      <a class="page-link" href="?page=<%= prevPage %>">Previous</a>
                    </li>
                    <% } else { %>
                      <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                      </li>
                      <% } %>

                        <% for (let i=1; i <=totalPages; i++) { %>
                          <li class="page-item <%= i === page ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>">
                              <%= i %>
                            </a>
                          </li>
                          <% } %>

                            <% if (hasNextPage) { %>
                              <li class="page-item">
                                <a class="page-link" href="?page=<%= nextPage %>">Next</a>
                              </li>
                              <% } else { %>
                                <li class="page-item disabled">
                                  <span class="page-link">Next</span>
                                </li>
                                <% } %>

                </ul>
              </nav>

    </div>
  </body>