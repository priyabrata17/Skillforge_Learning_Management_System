<% layout("layouts/boilerplate") %>

    <body>
        <!-- Header Start -->
        <div class="jumbotron jumbotron-fluid page-header position-relative overlay-bottom"
            style="margin-bottom: 90px;">
            <div class="container text-center py-5">
                <h1 class="text-white display-1">Course Details</h1>
                <div class="d-inline-flex text-white mb-5">
                    <p class="m-0 text-uppercase"><a class="text-white" href="/home">Home</a></p>
                    <i class="fa fa-angle-double-right pt-1 px-3"></i>
                    <p class="m-0 text-uppercase">Course Detail</p>
                </div>
            </div>
        </div>
        <!-- Header End -->


        <!-- Course Detail Start -->
        <div class="container-fluid py-5">
            <div class="container py-5">

                <div class="row">

                    <!-- Course Image -->
                    <div class="col-lg-5 mb-5 mb-lg-0" style="min-height: 500px;">
                        <div class="position-relative h-100">
                            <img class="position-absolute w-100 h-100" src="<%= existingCourse.image.url %>"
                                style="object-fit: cover;">
                        </div>
                    </div>

                    <!-- Course Content -->
                    <div class="col-lg-7">
                        <div class="section-title position-relative mb-4">
                            <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">
                                Course Detail
                            </h6>
                            <h1 class="display-4">
                                <%= existingCourse.title %>
                            </h1>
                        </div>

                        <p>
                            <%= existingCourse.description %>
                        </p>

                        <!-- Instructor Info -->
                        <div class="d-flex align-items-center mt-4">
                            <img src="<%= existingCourse.instructor.image.url %>" class="rounded-circle mr-3"
                                style="width: 70px; height: 70px; object-fit: cover;">

                            <div>
                                <h5 class="mb-1">Instructor</h5>
                                <h4 class="text-primary m-0">
                                    <%= existingCourse.instructor.fullName %>
                                </h4>
                            </div>
                        </div>

                        <!-- Dynamic Button -->
                        <div class="mt-5">
                            <% if (isEnrolled) { %>

                                <% if (isEnrolled.status==="pending" ) { %>
                                    <a href="" class="btn btn-warning btn-md w-50 py-2">
                                        Pending For Approval
                                    </a>
                                    <% } else { %>
                                        <a href="/classroom/<%= existingCourse._id %>"
                                            class="btn btn-success btn-md w-50 py-2">
                                            Start Learning
                                        </a>
                                        <% } %>

                                            <% } else { %>
                                                <a href="/home/enrollment-page"
                                                    class="btn btn-primary btn-md w-50 py-2">
                                                    Enroll Now
                                                </a>
                                                <% } %>
                        </div>


                    </div>
                </div>

            </div>
        </div>
        <!-- Course Detail End -->
    </body>