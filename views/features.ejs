<% layout("layouts/boilerplate") %>

<body>

    <!-- Header Start -->
    <div class="jumbotron jumbotron-fluid page-header position-relative overlay-bottom" style="margin-bottom: 90px;">
        <div class="container text-center py-5">
            <h1 class="text-white display-1">Features</h1>
            <div class="d-inline-flex text-white mb-5">
                <p class="m-0 text-uppercase"><a class="text-white" href="/home">Home</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase">Features</p>
            </div>
        </div>
    </div>
    <!-- Header End -->


    <!-- Feature Start -->
        <div class="container-fluid bg-image" style="margin: 90px 0;">
            <div class="container">
                <% allFeatures.forEach((feature) => { %>
                    <div class="row">
                    <div class="col-lg-7 my-5 pt-5 pb-lg-5">
                        <div class="section-title position-relative mb-4">
                            <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Why Choose
                                Us?</h6>
                            <h1 class="display-4">
                                <%= feature.titleOne %>
                            </h1>
                        </div>
                        <p class="mb-4 pb-2">
                            <%= feature.descriptionOne %>
                        </p>
                        <div class="d-flex mb-3">
                            <div class="btn-icon bg-primary mr-4">
                                <i class="fa fa-2x fa-graduation-cap text-white"></i>
                            </div>
                            <div class="mt-n1">
                                <h4>
                                    <%= feature.titleTwo %>
                                </h4>
                                <p>
                                    <%= feature.descriptionTwo %>
                                </p>
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <div class="btn-icon bg-secondary mr-4">
                                <i class="fa fa-2x fa-certificate text-white"></i>
                            </div>
                            <div class="mt-n1">
                                <h4>
                                    <%= feature.titleThree %>
                                </h4>
                                <p>
                                    <%= feature.descriptionThree %>
                                </p>
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="btn-icon bg-warning mr-4">
                                <i class="fa fa-2x fa-book-reader text-white"></i>
                            </div>
                            <div class="mt-n1">
                                <h4>
                                    <%= feature.titleFour %>
                                </h4>
                                <p class="m-0">
                                    <%= feature.descriptionFour %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5" style="min-height: 500px;">
                        <div class="position-relative h-100">
                            <img class="position-absolute w-100 h-100" src="<%= feature.image.url %>"
                                style="object-fit: cover;">
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
        <!-- Feature End -->
</body>